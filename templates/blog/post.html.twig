{% extends 'base.html.twig' %}
{% block title %}{{ blog.seoMeta.title | default(blog.title) | raw }}{% endblock %}
{% block metaData %}
    <meta property="og:title" content="{{ blog.seoMeta.title | default(blog.title) | raw }}">
    <meta property="og:description" content="{{ blog.seoMeta.description | default(blog.excerpt) | raw }}">
    <meta property="og:image" content="{{ vich_s3.asset(blog, 'imageFile') }}">
    <meta property="og:url" content="{{ url('blog_post', {slug: blog.slug}) }}">
    <meta property="og:type" content="article">
    <meta property="title" content="{{ blog.seoMeta.title | default(blog.title) | raw }}">
    <meta name="description" content="{{ blog.seoMeta.description | default(blog.excerpt) | raw }}">
    <meta name="keywords" content="{{ blog.seoMeta.keywords | default('') | raw }}">
    <link rel="canonical" href="{{ url('blog_post', {slug: blog.slug}) }}" />
{% endblock %}
{% block body %}
    {{ include('common/common_mobile_bar.html.twig',{commonBarText: 'Order Online Or Call Now',commonBarTele: '+1-877-958-1499'}) }}
    <div class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <a href="{{ url('category_shop',{c: categoriesCommaSeparated}) }}" target="_blank">
                    <picture>
                        <source srcset="{{ storeInfo.isPromoStore ? 'https://static.yardsignplus.com/storage/promo-store/Blog-Banner-Copia-Mobile.webp' : 'https://static.yardsignplus.com/assets/blog-banner-mob.webp' }}"
                                media="(max-width: 767px)">
                        <img fetchpriority="high" width="1905" height="338" class="d-block w-100 h-auto" src="{{ storeInfo.isPromoStore ? 'https://static.yardsignplus.com/storage/promo-store/Blog-Banner-Copia-Destop.webp' : 'https://static.yardsignplus.com/assets/blog-banner-desk.webp' }}"
                             alt="YSP Contact Banner">
                    </picture>
                </a>
            </div>
        </div>
    </div>
    {{ include('common/breadcrumb.html.twig', { breadcrumbs: [
        { name: 'Blogs', link: url('blogs') },
        { name: blog.title, active: true }
    ]}) }}
    <div class="container py-4 blog-page">
        <div class="row">
            <div class="col-12 col-md-8">
                <div class="row">
                    <div class="col-12">
                        <div class="card article mb-3">
                            <div class="card-header">
                                <h1 class="card-title mb-0">{{ blog.title }}</h1>
                                <div class="author-meta">
                                    <span class="author">
                                        Posted By
                                        <img src="{{ vich_s3.asset(blog.author, 'avatarFile', '100x100') }}"
                                             alt="{{ blog.author.name }}" class="avatar">
                                        {{ blog.author.name }}
                                    </span>
                                    <span class="date"> on {{ blog.publishedAt | date('F j, Y') }}</span>
                                </div>
                                <div class="categories">
                                    {% for category in blog.categories %}
                                        <a href="{{ path('blog_category', {slug: category.slug}) }}"
                                           class="badge bg-ysp-purple">{{ category.title }}</a>
                                    {% endfor %}
                                </div>
                            </div>
                            <img src="{{ vich_s3.asset(blog, 'imageFile') }}" class="mt-2" alt="{{ blog.title }}">
                            <div class="card-body">
                                {{ blog.content | raw }}
                            </div>
                        </div>
                    </div>
                </div>
                {% include('common/_sharer.html.twig') with {url: url('blog_post', {slug: blog.slug})} %}
                {{ component('BlogComments', {
                    post: blog,
                }) }}
            </div>
            <div class="col-12 col-md-4">
                {{ include('blog/_widgets.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
