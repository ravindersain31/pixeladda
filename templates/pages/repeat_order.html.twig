{% extends 'base.html.twig' %}

{% set title = metaData.title ?: metaData.pageTitle ~ ' - ' ~ storeInfo.storeTitle %}

{% block title %}{{ title }}{% endblock %}
{% block metaData %}
    {% set pageUrl = url('repeat_order') %}
    {% set pageImageUrl = storeInfo.isPromoStore 
        ? 'https://static.yardsignplus.com/storage/promo-store/Repeat-Order-Banner-Desktop.webp'
        : 'https://static.yardsignplus.com/repeat-order_20221226-5e8fe7b0-84e4-11ed-b9a7-9bf4ed3d54a5.jpg'
    %}

    {% include 'common/_page_meta.html.twig' with {
        title: title,
        metaData: metaData,
        pageUrl: pageUrl,
        pageImageUrl: pageImageUrl,
        storeInfo: storeInfo
    } %}
{% endblock %}
{% block body %}
    {{ include('common/common_mobile_bar.html.twig',{commonBarText: 'Order Online Or Call Now',commonBarTele: '+1-877-958-1499'}) }}
    {{ include('common/_banner.html.twig',{
        'desktopImg': storeInfo.isPromoStore ?'https://static.yardsignplus.com/storage/promo-store/Repeat-Order-Banner-Desktop.webp':'https://static.yardsignplus.com/repeat-order_20221226-5e8fe7b0-84e4-11ed-b9a7-9bf4ed3d54a5.jpg',
        'desktopAlt': 'YSP Repeat Order Banner',
        'mobileImg': storeInfo.isPromoStore ? 'https://static.yardsignplus.com/storage/promo-store/Repeat-Order-Banner-Mobile.webp':'https://static.yardsignplus.com/repeat-orders_20230104-16bfc120-8c2a-11ed-ae3b-63d2294bedc6.png',
        'mobileAlt': 'YSP Repeat Order Banner'
    }) }}
    {{ include('common/highlights.html.twig') }}
    {{ include('common/breadcrumb.html.twig', { breadcrumbs: [
        { name: 'Repeat Order', active: true }
    ]}) }}

    {{ include('pages/_repeat_order.html.twig') }}

{% endblock %}