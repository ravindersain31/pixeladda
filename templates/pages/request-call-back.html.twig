{% extends 'base.html.twig' %}

{% set title = metaData.title ?: metaData.pageTitle ~ ' - ' ~ storeInfo.storeTitle %}

{% block title %}{{ title }}{% endblock %}
{% block metaData %}
    {% set pageUrl = url('request_call_back') %}
    {% set pageImageUrl = storeInfo.isPromoStore
        ? 'https://static.yardsignplus.com/storage/promo-store/About-Banner-Mobile.webp'
        : 'https://static.yardsignplus.com/about-us_20230104-867ee7b0-8c29-11ed-89cb-152b12637baa.png'
    %}

    {% include 'common/_page_meta.html.twig' with {
        title: title,
        metaData: metaData,
        pageUrl: pageUrl,
        pageImageUrl: pageImageUrl,
        storeInfo: storeInfo
    } %}
{% endblock %}
{% block body %}
	{{ include('common/common_mobile_bar.html.twig',{commonBarText: 'Order Online Or Call Now',commonBarTele: '+1-877-958-1499'}) }}
	<div class="page-header">
        <div class="page-header-content">
            REQUEST IMMEDIATE CALL
        </div>
    </div>
	{{ include('common/breadcrumb.html.twig', { breadcrumbs: [
        { name: 'Request Call Back', active: true }
    ]}) }}
	<section class="common-sec-horizontal-pad ysp-contact-us-wrapper">
		<div class="container">
			<div class="row">
				<div class="col-lg-12"></div>
			</div>
			<div class="row justify-content-center">
				<div class="col-lg-4 my-4">
					<div class="text-left repeat-info mb-4">
						<p>We are available 24 hours a day, 7 days a week to answer any questions you may have. To request a call, please enter in your name, phone number, and a brief description. One of our sales experts will give you a call in less than 1 hour.</p>
					</div>
					<div class="card rounded-1">
						<div class="card-body">
							{{ include('default/_request_call_back.html.twig') }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
