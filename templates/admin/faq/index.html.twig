{% extends 'admin/base.html.twig' %}

{% block title %}FAQs{% endblock %}

{% block pageTitle %}
<div class="page-header-icon">
    <i class="fas fa-list"></i>
</div>
FAQs
{% endblock %}

{% block body %}
<div class="card card-header-actions mx-auto shadow-none">
    <div class="card-header d-flex justify-content-between align-items-center">
        List of FAQs
        <div class="d-flex gap-2">
            <a href="{{ path('admin_faq_new') }}" class="btn btn-sm btn-primary">
                <i class="fa fa-plus"></i>&nbsp; Add
            </a>
            <a href="{{ path('faqs_new') }}" class="btn btn-sm btn-outline-dark" target="_blank">
                <i class="fa fa-external-link-square"></i>&nbsp; View FAQs
            </a>
            {{ include('admin/faq/component/_filter_faq.html.twig') }}
            <a href="{{ path('admin_faq_export', {'type': 'static'}) }}" class="btn btn-sm btn-success d-none">
                <i class="fa fa-file-export"></i>&nbsp; Export Static
            </a>
            <a href="{{ path('admin_faq_export', {'type': 'dynamic'}) }}" class="btn btn-sm btn-primary d-none">
                <i class="fa fa-file-export"></i>&nbsp; Export Dynamic
            </a>

            <button type="button" class="btn btn-sm btn-info d-none" data-bs-toggle="modal" data-bs-target="#importModal">
                <i class="fa fa-file-import"></i>&nbsp; Import
            </button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="card-body table table-striped mb-0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Type</th>
                    <th>Question</th>
                    <th>Editor</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for faq in faqs %}
                    <tr>
                        <td>{{ ((faqs.currentPageNumber - 1) * faqs.itemNumberPerPage) + loop.index }}</td>
                        <td class="fit-to-cell">{{ faq.type.name }}</td>
                        <td class="fit-to-cell">{{ faq.question }}</td>
                        <td>
                            {% if faq.showOnEditor %}
                                <span class="badge bg-success">Yes</span>
                            {% else %}
                                <span class="badge bg-warning">No</span>
                            {% endif %}
                        </td>
                        <td class="d-flex gap-2">
                            <a href="{{ path('admin_faq_edit', {id: faq.id}) }}" class="btn btn-sm btn-primary" title="Edit">
                                <i class="fa fa-edit"></i>
                            </a>

                            <form method="post" action="{{ path('admin_faq_delete', {id: faq.id}) }}" onsubmit="return confirm('Are you sure you want to delete this FAQ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ faq.id) }}">
                                <input type="hidden" name="page" value="{{ app.request.get('page', 1) }}">
                                <button class="btn btn-sm btn-danger" title="Delete">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">No FAQs found.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    {{ knp_pagination_render(faqs) }}
</div>

<div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form method="post" enctype="multipart/form-data" action="{{ path('admin_faq_import') }}">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importModalLabel">Import FAQs</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="faq_file" class="form-label">Upload Excel File</label>
                    <input type="file" name="faq_file" id="faq_file" class="form-control" required accept=".xlsx,.xls,.csv">
                    <small class="form-text text-muted">
                        Allowed: .xlsx, .xls, .csv
                    </small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary btn-sm">Import</button>
            </div>
        </div>
    </form>
  </div>
</div>
<script>
document.getElementById('faq_file').addEventListener('change', function () {
    const file = this.files[0];
    if (!file) return;

    const allowedTypes = [
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet", 
        "application/vnd.ms-excel", 
        "text/csv",
        "application/csv",
        "text/plain" 
    ];

    if (!allowedTypes.includes(file.type)) {
        alert("Only Excel (.xlsx, .xls) or CSV (.csv) files are allowed.");
        this.value = "";
        return;
    }

    if (file.size > 5 * 1024 * 1024) { 
        alert("File size must be less than 5 MB.");
        this.value = "";
    }
});
</script>

{% endblock %}
