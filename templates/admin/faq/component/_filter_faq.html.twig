<button class="btn btn-outline-primary btn-sm" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasFilterFaq"
        aria-controls="offcanvasFilterFaq">
    Filter
</button>
<a href="{{ path('admin_faq_index') }}" class="btn btn-outline-danger btn-sm">Clear</a>

<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasFilterFaq"
     aria-labelledby="offcanvasFilterFaqLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasFilterFaqLabel">Filter FAQs</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        {{ form_start(filterForm) }}
        
        {{ form_row(filterForm.question) }}
        {{ form_row(filterForm.type) }}

        <div class="mt-3">
            <button type="submit" class="btn btn-primary btn-sm">Apply</button>
        </div>
        {{ form_end(filterForm) }}
    </div>
</div>
