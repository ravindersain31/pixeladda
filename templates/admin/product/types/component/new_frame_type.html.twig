<div {{ attributes }}>
    {{ form_start(form, {attr: {
        'novalidate': true,
        'data-action': 'live#action:prevent',
        'data-live-action-param': 'save'
    }}) }}
    {{ form_errors(form) }}
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">New Frame Type</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
                <div class="modal-body">
                    {{ form_row(form.frameType) }}
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" data-loading="action(save)|addAttribute(disabled)" class="btn btn-primary">
                    <span data-loading="action(save)|show" style="display: none">Adding...</span>
                    <span data-loading="action(save)|hide" style="display: block">Add New Frame Type</span>
                </button>
            </div>
        </div>
{{ form_end(form) }}
</div>