<button class="btn btn-primary btn-sm" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasFilterOrder"
        aria-controls="offcanvasFilterOrder">
    Filter
</button>
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasFilterOrder"
     aria-labelledby="offcanvasFilterOrderLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasFilterOrderLabel">Filter</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        {{ form_start(filterForm) }}
        {{ form_row(filterForm.search) }}
        {{ form_row(filterForm.category) }}
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        {{ form_end(filterForm) }}
    </div>
</div>