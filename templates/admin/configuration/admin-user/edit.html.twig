{% extends 'admin/base.html.twig' %}

{% block title %}Create Admin/Designer Account{% endblock %}
{% block pageTitle %}
    <div class="page-header-icon">
        <i class="fas fa-user-md"></i>
    </div>
    Update Admin/Designer Account - "{{ user.username }}"
{% endblock %}

{% block body %}
    <div class="card card-header-actions mx-auto shadow-none">
        <div class="card-header">
            <div class="w-75">Update Admin/Designer Account - "{{ user.username }}"</div>
            <div>
                <a href="{{ url('admin_config_users') }}" class="btn btn-primary btn-sm">
                    <i class="fas fa-arrow-left me-2"></i>
                    List
                </a>
            </div>
        </div>
        <div class="card-body">
            {{ form(form) }}
        </div>
    </div>
    <style>
        .role-list .form-check {
            margin-right: 20px;
            display: block;
            position: relative;
            vertical-align: middle;
            line-height: 27px;
        }
    </style>
{% endblock %}
