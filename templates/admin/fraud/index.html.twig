{% extends 'admin/base.html.twig' %}

{% block title %}Frauds List{% endblock %}
{% block pageTitle %}
    <div class="page-header-icon">
        <i class="fas fa-list"></i>
    </div>
    Frauds List
{% endblock %}

{% block body %}
    <div class="card card-header-actions mx-auto shadow-none">
        <div class="card-header">
            All Frauds
            <div>
                <a href="{{ url('admin_fraud_add') }}" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-2"></i>
                    Add
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="card-body table table-striped mb-0 text-center">
            <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                {% for fraud in frauds.items %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ fraud.email ?? '-' }}</td>
                        <td style="min-width:280px; width: 500px;">{{ fraud.phoneNumber ?? '-' }}</td>
                        <td>
                            <a href="{{ path('admin_fraud_edit', {'id': fraud.id}) }}" class="btn btn-info btn-xs">
                                <i class="fas fa-edit"></i>
                                <p class="mb-0 mx-1">Edit</p>
                            </a>
                            <a href="{{ path('admin_fraud_remove', {'id': fraud.id}) }}" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure you want to delete this fraud entry?');">
                                <i class="fas fa-trash me-1"></i>
                                <p class="mb-0 mx-1">Delete</p>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">No records</td>
                    </tr>
                {% endfor %}
            </tbody>
            </table>
        </div>
    </div>
{% endblock %}
