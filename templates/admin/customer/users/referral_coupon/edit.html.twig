{% extends 'admin/base.html.twig' %}

{% block title %}Referral Coupon Edit{% endblock %}
{% block pageTitle %}
	<div class="page-header-icon">
		<i class="fas fa-list"></i>
	</div>
	Referral Coupon
{% endblock %}

{% block body %}
	<div class="card card-header-actions mx-auto shadow-none">
		<div class="card-header">
			Edit {{coupon.code}} 
            <div>
				<a href="{{ url('admin_users_customer_referral_coupons', { id: user.id }) }}" class="btn btn-dark btn-sm">
					<i class="fas fa-arrow-left me-2"></i>
					List
				</a>
			</div>
		</div>
        <div class="card-body">
            {{ component('CouponForm',{
                form:form,
                coupon: coupon
            }) }}
        </div>
	</div>
{% endblock %}