{% extends 'admin/base.html.twig' %}

{% block title %}Subscribers
{% endblock %}
{% block pageTitle %}
    <div class="page-header-icon">
        <i class="fas fa-list"></i>
    </div>
    Subscribers
{% endblock %}

{% block body %}
    {% if isFilterFormSubmitted %}
        Showing results for:
        <div class="small">
            {% for key, value in filterForm.vars.value %}
                {% if value is not empty %}
                    <span class="me-3">
                        <b>{{ key|capitalize }}:</b> {{ value }}
                    </span>
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}
    <div class="card card-header-actions mx-auto shadow-none">
        <div class="card-header">
            All subscribers
            <div class="card-header-actions">
                {% include 'admin/customer/subscriber/component/_subscribers_export_form.html.twig' %}
			</div>
            <div class="card-header-actions">
		{{ include('admin/customer/subscriber/component/_filter.html.twig') }}
			</div>
        </div>
        <table class="card-body table table-striped mb-0">
            <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Offers</th>
                <th>Marketing</th>
                <th>Mobile Alerts</th>
                <th>Created At</th>
                <th class="text-center">Action</th>
            </tr>
            </thead>
            <tbody>
                {% for key,subscriber in subscribers %}
                    <tr>
                        <td>
                            {{ subscribers.getPaginationData.firstItemNumber + loop.index - 1 }}
                            <span class="badge bg-dark mx-3">
                                {% if subscriber.storeDomain is not null and isPromoStore(subscriber.storeDomain) and subscriber.storeDomain.name is not empty %}
                                    {{ subscriber.storeDomain.name | default('-') }}
                                {% elseif subscriber.store is not null %}
                                    {{ subscriber.store.shortName | default('-')}}
                                {% else %}
                                    -
                                {% endif %}
                            </span>
                        </td>
                        <td>{{ subscriber.email }}</td>
                        <td>{{ subscriber.name| default("-") }}</td>
                        <td>{{ subscriber.phone| default("-")}}</td>
                        <td>{{ subscriber.offers ? 'Yes' : 'No' }}</td>
                        <td>{{ subscriber.marketing ? 'Yes' : 'No' }}</td>
                        <td>{{ subscriber.mobileAlert ? 'Yes' : 'No' }}</td>
                        <td>{{ subscriber.createdAt|date }}</td>
                        <td class="text-center">
							<a href="{{ url('admin_subscribers_edit',{id:subscriber.id}) }}" class="btn btn-blue btn-xs">Edit</a>
						</td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6">No records</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        {{ knp_pagination_render(subscribers) }}
    </div>

{% endblock %}



