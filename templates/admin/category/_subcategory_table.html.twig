{% if category.subCategories | length > 0 %}
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Website</th>
                    <th>Name</th>
                    <th>Slug</th>
                    <th>SKU</th>
                    <th>Sort</th>
                    <th>Menu</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for subCategory in category.subCategories %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ subCategory.store.shortName }}</td>
                        <td>{{ subCategory.name }}
                            <span class="badge bg-secondary ms-2">{{ subCategory.productsAll | length }} Products</span>
                        </td>
                        <td>{{ subCategory.slug }}</td>
                        <td>{{ subCategory.skuInitial }}</td>
                        <td>{{ subCategory.sortPosition }}</td>
                        <td>
                            <span class="badge {{ subCategory.displayInMenu ? 'bg-success' : 'bg-danger' }}">
                                {{ subCategory.displayInMenu ? 'Yes' : 'No' }}
                            </span>
                        </td>
                        <td class="d-flex justify-content-start align-items-center gap-2">
                            {% if is_granted('admin_category_edit') %}
                                <a href="{{ url('admin_category_edit', {id: subCategory.id}) }}" class="badge text-white bg-info text-decoration-none my-1">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            {% endif %}
                            {% if category.isEnabled %}
                                <a href="{{ url('category', {slug: category.slug, subSlug: subCategory.slug}) }}" target="_blank" class="badge text-white bg-dark text-decoration-none my-1">
                                    <i class="fas fa-external-link-alt"></i> View
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <div class="alert alert-warning text-center p-2 m-0">
        No Sub Categories found.
    </div>
{% endif %}