<div class="mt-2 border-top">
    <h5 class="mt-2">Customs Form</h5>
    {{ form_start(form, {attr: {
        'novalidate': true,
        'data-action': 'live#action:prevent',
        'data-live-action-param': 'createCustomInfo',
    }}) }}
    {{ form_errors(form) }}
    <div class="row">
        <div class="col-6">
            {{ form_row(form.contentType) }}
        </div>
        <div class="col-6">
            {{ form_row(form.nonDeliveryAction) }}
        </div>
        <div class="col-6">
            {{ form_row(form.customsSigner) }}
        </div>
        <div class="col-6">
            {{ form_row(form.eelPfc) }}
        </div>

    </div>
    <div class="d-block">
        <button type="submit" data-loading="action(createCustomInfo)|addAttribute(disabled)"
                class="btn btn-primary btn-sm mt-2">
            <span data-loading="action(createCustomInfo)|show" style="display: none">Processing...</span>
            <span data-loading="action(createCustomInfo)|hide" style="display: block">Submit</span>
        </button>
    </div>
    {{ form_end(form) }}
</div>
