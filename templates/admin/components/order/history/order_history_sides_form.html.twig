
<div {{ attributes }}>
    {{ form_start(form, { attr: {
        'novalidate': true,
        'data-action': 'live#action:prevent',
        'data-live-action-param': 'search'
    } }) }}
    <div class="row">
        {% set ordersBySides = this.getOrdersBySides() %}
        {% set currentDate = "now"|date("Y-m-d") %}
        {% set past60Days = "now"|date_modify("-60 days")|date("Y-m-d") %}
        {% set startOfYear = "now"|date("Y") ~ "-01-01" %}
        <div class="col-12 col-md-9 tab-pane fade show active" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
            <!-- Sides Report Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow-none">
                        <div class="card-body p-0 table-responsive">
                            <table class="table table-bordered mb-0">
                                <thead>
                                    <tr>
                                        <th class="bg-light text-primary">
                                            Total Orders Report [<small class="text-primary">Date: {{ this.getStartDate()|date('M d, Y') }} - {{ this.getEndDate()|date('M d, Y') }}</small>]
                                        </th>
                                        <th class="text-end bg-light">Total Orders</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="fw-600">Total Orders</td>
                                        <td class="text-end">{{ ordersBySides['totalOrders']|number_format(0, '.', ',') }}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                <tr>
                                    <td class="fw-700 text-primary" colspan="3">
                                        Orders by Sides (Single/Double)
                                        <table class="table table-bordered sortable">
                                            <thead>
                                                <tr>
                                                    <th class="fw-700 small p-1 text-success indicator-right" tabindex="0" aria-sort="ascending">Sides</th>
                                                    <th class="text-end small p-1 text-success indicator-right" tabindex="0" aria-sort="ascending">Total Sides</th>
                                                    <th class="text-end small p-1 text-success indicator-right" tabindex="0" aria-sort="ascending">Total Orders</th>
                                                    <th class="text-end small p-1 text-success no-sort" tabindex="0" aria-sort="ascending">Sides Percentage</th>
                                                    <th class="text-end small p-1 text-success no-sort" tabindex="0" aria-sort="ascending">Order Percentage</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% set totalQuantity = 0 %}
                                                {% for key, sides in ordersBySides['ordersBySides'] %}
                                                {% set totalQuantity = totalQuantity + sides['totalQuantity'] %}
                                                    <tr>
                                                        <td class="fw-600">{{ key }}</td>
                                                        <td class="text-end">{{ sides['totalQuantity']|number_format(0, '.', ',') }}</td>
                                                        <td class="text-end">{{ sides['orderIds']|length|number_format(0, '.', ',') }}</td>
                                                        <td class="text-end">
                                                            {{ (( sides['totalQuantity'] / sides['orderIds']|length) * 100) | number_format(2, '.', ',') }}%
                                                        </td>
                                                        <td class="text-end">
                                                            {{ ((sides['orderIds']|length / ordersBySides['totalOrders']) * 100) | number_format(2, '.', ',') }}%
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <td class="fw-700 small p-1 text-success">Total</td>
                                                    <td class="text-end small p-1 text-success">{{ totalQuantity|number_format(0, '.', ',') }}</td></td>
                                                    <td class="text-end small p-1 text-success"></td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </td>
                                </tr>
                                <tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Filter Form Section -->
        <div class="col-12 col-md-3 bg-light p-3 rounded">
            {{ form_row(form.startDate) }}
            {{ form_row(form.endDate) }}
            {{ form_row(form.orderStatus) }}
            {{ form_row(form.paymentStatus) }}
            <div class="col-12">
                <button type="submit" data-loading="action(search)|addAttribute(disabled)" class="btn btn-sm btn-primary">
                    <span data-loading="action(search)|show" style="display: none">Searching...</span>
                    <span data-loading="action(search)|hide" style="display: block">Search</span>
                </button>
            </div>
        </div>
        <!-- Submit Button -->
    </div>
</div>
