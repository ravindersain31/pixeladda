
<div {{ attributes }}>
    {{ form_start(form, { attr: {
        'novalidate': true,
        'data-action': 'live#action:prevent',
        'data-live-action-param': 'search'
    } }) }}
    <div class="row">
        <div class="col-12 col-md-9 tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
            <div class="row">
                <div class="col-12">
                    <!-- Total Orders Report Section -->
                    {% set ordersBySizes = this.getOrdersBySizes() %}
                    {% set currentDate = "now"|date("Y-m-d") %}
                    {% set past60Days = "now"|date_modify("-60 days")|date("Y-m-d") %}
                    {% set startOfYear = "now"|date("Y") ~ "-01-01" %}
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card shadow-none">
                                <div class="card-body p-0 table-responsive">
                                    <table class="table table-bordered mb-0">
                                        <thead>
                                            <tr>
                                                <th class="bg-light text-primary">
                                                    Total Orders Report [<small class="text-primary">Date: {{ this.getStartDate()|date('M d, Y') }} - {{ this.getEndDate()|date('M d, Y') }}</small>]
                                                </th>
                                                <th class="text-end bg-light">Total Orders</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="fw-600">Total Orders</td>
                                                <td class="text-end">{{ ordersBySizes['totalOrders']|number_format(0, '.', ',') }}</td>
                                            </tr>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td class="fw-700 text-primary" colspan="3">
                                                    Orders by Size
                                                    <table class="table table-bordered sortable">
                                                        <thead>
                                                            <tr>
                                                                <th class="fw-700 small p-1 text-success indicator-right">Sizes</th>
                                                                <th class="text-end small p-1 text-success indicator-right" tabindex="0" aria-sort="ascending">Total Signs</th>
                                                                <th class="text-end small p-1 text-success indicator-right" tabindex="0" aria-sort="ascending">Total Orders</th>
                                                                <th class="text-end small p-1 text-success no-sort">Signs Percentage</th>
                                                                <th class="text-end small p-1 text-success no-sort">Order Percentage</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            {% set totalQuantity = 0 %}
                                                            {% set totalSizesOrders = 0 %}
                                                            {% for key, size in ordersBySizes['ordersBySizes'] %}
                                                            {% set totalQuantity = totalQuantity + size['totalQuantity'] %}
                                                            {% set totalSizesOrders = totalSizesOrders + size['totalQuantity'] %}
                                                            <tr>
                                                                <td class="fw-600 small p-1">
                                                                    {% if key == 'CUSTOM-SIZE' %}
                                                                        <div class="accordion accordion-flush p-0" id="accordionFlushExample">
                                                                            <div class="accordion-item">
                                                                                <h2 class="accordion-header" id="flush-headingOne">
                                                                                    <button class="accordion-button collapsed p-0 fw-600 fs-13" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                                                                                        {{ key }}
                                                                                    </button>
                                                                                </h2>
                                                                                <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                                                                                    <div class="accordion-body">
                                                                                        <table class="table table-bordered mb-0 sortable">
                                                                                            <thead>
                                                                                                <tr>
                                                                                                    <th class="fw-600 small p-1 text-success indicator-right">Size</th>
                                                                                                    <th class="text-end small p-1 text-success indicator-right">Signs Qty</th>
                                                                                                </tr>
                                                                                            </thead>
                                                                                            <tbody>
                                                                                            {% set totalSizesQty = 0 %}
                                                                                            {% for key, item in size['sizes'] %}
                                                                                                {% set totalSizesQty = totalSizesQty + item['quantity'] %}
                                                                                                <tr>
                                                                                                    <td class="fw-600 small p-1">{{ key }}</td>
                                                                                                    <td class="text-end small p-1">{{ item['quantity'] }}</td>
                                                                                                </tr>
                                                                                            {% endfor %}
                                                                                            <tbody>
                                                                                            <tfoot>
                                                                                                <tr>
                                                                                                    <td class="fw-700 small p-1 text-success">Total</td>
                                                                                                    <td class="text-end small p-1 text-success">{{ totalSizesQty|number_format(0, '.', ',') }}</td>
                                                                                                </tr>
                                                                                            </tfoot>
                                                                                        </table>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    {% else %}
                                                                        {{ key }}
                                                                    {% endif %}
                                                                </td>
                                                                <td class="text-end small p-1">{{ size['totalQuantity'] }}</td>
                                                                <td class="text-end small p-1">{{ size['orderIds']|length }}</td>
                                                                <td class="text-end small p-1">{{ (size['totalQuantity']/size['orderIds']|length * 100)|number_format(2, '.', ',') }}%</td>
                                                                <td class="text-end small p-1">{{ ((size['orderIds']|length / ordersBySizes['totalOrders']) * 100)|number_format(2, '.', ',') }}%</td>
                                                            </tr>
                                                            {% endfor %}
                                                        </tbody>
                                                        <tfoot>
                                                            <tr>
                                                                <td class="fw-700 small p-1 text-success">Total</td>
                                                                <td class="text-end small p-1 text-success">{{ totalQuantity|number_format(0, '.', ',') }}</td>
                                                                <td class="text-end small p-1 text-success"></td>
                                                            </tr>
                                                        </tfoot>
                                                    </table>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Filter Form Section -->
        <div class="col-12 col-md-3 bg-light p-3 rounded">
            {{ form_row(form.startDate) }}
            {{ form_row(form.endDate) }}
            {{ form_row(form.orderStatus) }}
            {{ form_row(form.paymentStatus) }}
            <div class="col-12">
                <button type="submit" data-loading="action(search)|addAttribute(disabled)" class="btn btn-sm btn-primary">
                    <span data-loading="action(search)|show" style="display: none">Searching...</span>
                    <span data-loading="action(search)|hide" style="display: block">Search</span>
                </button>
            </div>
        </div>
        <!-- Submit Button -->
    </div>
</div>
