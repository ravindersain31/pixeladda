<div {{ attributes }} class="d-flex gap-2 small mt-2">
    {% for task in this.getTasks() %}
        <div class="p-1 bg-light rounded">
            <div class="align-items-center d-flex form-check form-switch gap-2">

                <input
                    class="form-check-input"
                    type="checkbox"
                    role="switch"
                    id="designerTask_{{ task.value }}"
                    {% if this.isCompleted(task) %}checked{% endif %}
                    data-action="live#action"
                    data-live-action-param="toggle"
                    data-live-task-value-param="{{ task.value }}"
                >

                <label class="form-check-label" for="designerTask_{{ task.value }}">
                    <span class="badge bg-{{ this.isCompleted(task) ? 'success' : 'warning' }}">
                        {{ task.label }}
                    </span>
                </label>

            </div>
        </div>
    {% endfor %}
</div>
