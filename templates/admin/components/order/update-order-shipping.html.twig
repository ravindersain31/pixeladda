<div {{ attributes }}>
    {{ form_start(form, {attr: {
        'novalidate': true,
        'data-action': 'live#action:prevent',
        'data-live-action-param': 'save'
    }}) }}
    {{ form_errors(form) }}
    <div class="row">
        {{ form_row(form.shippingDate) }}
        <div class="col-12">
            <button type="submit" data-loading="action(save)|addAttribute(disabled)" class="btn btn-primary">
                <span data-loading="action(save)|show" style="display: none">Processing...</span>
                <span data-loading="action(save)|hide" style="display: block">Update Shipping</span>
            </button>
        </div>
    </div>
    {{ form_end(form) }}
</div>