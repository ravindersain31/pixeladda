<div {{ attributes }}>
    {{ form_start(form, {attr: {
        'novalidate': true,
        'data-action': 'live#action:prevent',
        'data-live-action-param': 'save'
    }}) }}
    {{ form_errors(form) }}
    <div class="row">
        {% if order.isManual and (orderItem.itemType == 'DEFUALT' or orderItem.product) %}
            <div class="col-6">
                {{ form_row(form.width) }}
            </div>
            <div class="col-6">
                {{ form_row(form.height) }}
            </div>
        {% endif %}
        <div class="col-12">
            {{ form_row(form.quantity) }}
        </div>
        <div class="col-12">
            {{ form_row(form.unitAmount) }}
        </div>
        <div class="col-6">
            {{ form_row(form.addons.sides) }}
        </div>
        <div class="col-6">
            {{ form_row(form.addons.shapes) }}
        </div>
        <div class="col-6">
            {{ form_row(form.addons.imprintColor) }}
        </div>
        <div class="col-6">
            {{ form_row(form.addons.grommets) }}
        </div>
        <div class="col-6">
            {{ form_row(form.addons.grommetColor) }}
        </div>
         <div class="col-6">
            {{ form_row(form.addons.frame) }}
        </div>
        {# <div class="col-12">
        {{ form_row(form.totalAmount) }}
      </div> #}
        <div class="col-12">
            <button type="submit" data-loading="action(save)|addAttribute(disabled)" class="btn btn-primary">
                <span data-loading="action(save)|show" style="display: none">Processing...</span>
                <span data-loading="action(save)|hide" style="display: block">Update Item</span>
            </button>
        </div>
    </div>
    {{ form_end(form) }}
</div>