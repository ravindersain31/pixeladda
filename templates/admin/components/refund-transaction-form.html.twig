<div {{ attributes }}>
    <style>
        .choices {
            .form-check {
                margin-right: 10px;
            }
        }
    </style>
    {{ form_start(form, {attr: {
        'novalidate': true,
        'data-action': 'live#action:prevent',
        'data-live-action-param': 'save',
    }}) }}
    <div class="card shadow-none bg-light mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-6">{{ form_row(form.refundType) }}</div>
                <div class="col-6">{{ form_row(form.amount) }}</div>
            </div>
            {{ form_widget(form) }}
            <div class="mb-3">
                <button type="submit" data-loading="action(save)|addAttribute(disabled)" class="btn btn-primary">
                    <span data-loading="action(save)|show" style="display: none">Processing Refund...</span>
                    <span data-loading="action(save)|hide" style="display: block">Process Refund</span>
                </button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>

