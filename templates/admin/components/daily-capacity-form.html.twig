<div {{ attributes }}>
    {{ form_start(form, {attr: {
        'novalidate': true,
        'data-action': 'live#action:prevent',
        'data-live-action-param': 'save',
    }}) }}
    {% if flashMessage is not null and flashError is not null %}
        <div class="alert alert-{{ flashError }} alert-dismissible" role="alert">
            {{ flashMessage }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}
    {{ form_errors(form) }}
    {{ form_row(form.value) }}
    <button type="submit" data-loading="action(save)|addAttribute(disabled)" class="btn btn-primary">
        <span data-loading="action(save)|show" style="display: none">Processing...</span>
        <span data-loading="action(save)|hide" style="display: block">Save</span>
    </button>
    {{ form_end(form) }}
</div>