<div {{ attributes }}>
    {{ form_start(form, {attr: {
        'novalidate': true,
        'data-action': 'live#action:prevent',
        'data-live-action-param': 'save',
    }}) }}
    {{ form_widget(form) }}
    <div class="mb-3">
        <button type="submit" data-loading="action(save)|addAttribute(disabled)" class="btn btn-primary">
            <span data-loading="action(save)|show" style="display: none">Creating Payment Link...</span>
            <span data-loading="action(save)|hide" style="display: block">Create Payment Link</span>
        </button>
    </div>
    {{ form_end(form) }}
</div>

