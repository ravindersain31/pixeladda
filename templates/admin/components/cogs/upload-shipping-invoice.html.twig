<div {{ attributes }} class="p-4 bg-light rounded shadow-sm w-100" style="max-width: 500px; overflow: hidden;">
    {{ form_start(form, {
        attr: {
            'novalidate': true,
            'data-action': 'live#action:prevent',
            'data-live-action-param': 'prevent|files|save',
            'class': 'needs-validation'
        }
    }) }}

    {{ form_errors(form) }}

    <div class="text-start text-wrap">
        <p class="text-danger fw-bold mb-3" style="word-wrap: break-word;">
            Are you sure you want to refresh the COGS report for
            <strong>{{ day.date|date('M d, Y') }}</strong>?
        </p>
    </div>

    <div class="mb-3 w-100">
        {{ form_row(form.UPDATE_COGS_REPORT) }}
    </div>

    <div class="d-flex align-items-center gap-2 mt-4">
        <button type="submit"
                data-loading="action(save)|addAttribute(disabled)"
                aria-disabled="true"
                class="btn btn-primary btn-sm d-flex align-items-center gap-2 w-100">
            <!-- Loader Spinner -->
            <div class="spinner-border spinner-border-sm text-light" role="status" 
                 data-loading="action(save)|show" style="display: none;"></div>
            <span data-loading="action(save)|show" style="display: none;">Updating...</span>
            <span data-loading="action(save)|hide">Update</span>
        </button>
    </div>

    {{ form_end(form) }}
</div>
