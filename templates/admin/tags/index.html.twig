{% extends 'admin/base.html.twig' %}

{% block title %}Search Tags{% endblock %}
{% block pageTitle %}
    <div class="page-header-icon">
        <i class="fas fa-list"></i>
    </div>
    Search Tags
{% endblock %}

{% block body %}
    <div class="card card-header-actions mx-auto shadow-none">
        <div class="card-header">
            All Searching Tag
            <div>
                <a href="{{ url('admin_search_tag_add') }}" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-2"></i>
                    Add
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="card-body table table-striped mb-0">
            <thead>
            <tr>
                <th>Sr.</th>
                <th>Redirect Url</th>
                <th>Searching Tags</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                {% for tags in SearchTag %}
                    <tr>
                        <td>
                            {{ SearchTag.getPaginationData.firstItemNumber + loop.index - 1 }}
                            <span class="badge bg-dark mx-3">{{ tags.store.shortName | default('-') }}</span>
                        </td>
                        <td>
                        {{ tags.urlName}}
                        </td>
                        <td style="min-width:280px; width: 500px;">
                            {{ tags.tags|join(', ') }}
                        </td>
                        <td>
                            <a href="{{ url('admin_search_tag_edit',{ id:tags.id }) }}" class="btn btn-info btn-xs my-1 my-md-0">
                                <i class="fas fa-edit"></i>
                                <p class="mb-0 mx-1">Edit</p>
                            </a>
                            <a href="{{ url('admin_search_tag_remove',{ id:tags.id }) }}" class="btn btn-danger btn-xs"
                                onclick="return confirm('Are you sure you want to delete this item?')">
                                <i class="fas fa-trash me-1"></i>
                                <p class="mb-0 mx-1">Delete</p>
                            </a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="text-center">No records</td>
                    </tr>
                {% endfor %}
            </tbody>
            </table>
        </div>
    </div>
    <div class="mt-4">
        {{ knp_pagination_render(SearchTag) }}
    </div>
{% endblock %}
