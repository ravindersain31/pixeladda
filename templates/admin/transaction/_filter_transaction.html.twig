<button class="btn btn-primary btn-sm" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasFilterOrder"
        aria-controls="offcanvasFilterOrder">
    Filter
</button>
<a href="{{ app.request.pathInfo }}" class="btn btn-danger btn-sm">Clear</a>
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasFilterOrder"
     aria-labelledby="offcanvasFilterTransactions">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasFilterTransactions">Filter Transactions</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
        <div class="offcanvas-body">
        {{ form_start(filterForm) }}
        {{ form_row(filterForm.transactionId) }}
        {{ form_row(filterForm.status) }}
        {{ form_row(filterForm.paymentMethod) }}
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="{{ app.request.pathInfo }}" class="btn btn-danger">Clear</a>
        </div>
        {{ form_end(filterForm) }}
    </div>
</div>
