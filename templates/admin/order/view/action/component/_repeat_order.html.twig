<div {{ attributes }}>
    {{ form_start(form, {attr: {
        'novalidate': true,
        'data-action': 'live#action:prevent',
        'data-live-action-param': 'repeatOrder'
    }}) }}
        <div class="modal-header">
            <h5 class="modal-title">Repeat Order #{{ this.order.orderId }}</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            {% include 'flash.html.twig' with { class: 'p-2' } %}
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_row(form.orderId) }}
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" data-loading="action(repeatOrder)|addAttribute(disabled)" class="btn btn-sm btn-primary">
                <span data-loading="action(repeatOrder)|show" style="display: none">Repeating...</span>
                <span data-loading="action(repeatOrder)|hide" style="display: block">Repeat Order</span>
            </button>
        </div>
    {{ form_end(form) }}
</div>
