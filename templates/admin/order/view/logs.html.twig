<style type="text/css">
    ins {
        background: #009214;
        color: #fff;
        text-decoration: none;
    }
    del {
        background: #d40303;
        color: #fff;
        text-decoration: none;
    }
</style>
{% for log in logs %}
    <div class="card shadow-none mb-2">
        <div class="card-body p-2">
            {% if log.type == 'ORDER_ADDRESS_UPDATED' %}
                <div>{{ log.content | default('No Data Recorded') | nl2br  }}</div>
            {% else %}
                <div>{{ log.content | default('No Data Recorded') | raw }}</div>
            {% endif %}
            <div class="mt-2 small text-muted">
                {% set changedBy = log.changedBy %}
                {% if changedBy %}
                Changed By: {{ changedBy.username }} ({{ getUserType(changedBy) }}) on
                {% else %}
                    Logged At: 
                {% endif %}
                {{ log.createdAt | date('M d, Y h:i:s A') }}
            </div>
        </div>
    </div>
{% endfor %}
<div class="mt-3">
    {{ knp_pagination_render(logs) }}
</div>