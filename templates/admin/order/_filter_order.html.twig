<button class="btn btn-primary btn-sm" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasFilterOrder"
        aria-controls="offcanvasFilterOrder">
    Filter
</button>
<a href="{{ app.request.pathInfo }}" class="btn btn-danger btn-sm">Clear</a>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css"/>

<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasFilterOrder"
     aria-labelledby="offcanvasFilterOrderLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasFilterOrderLabel">Filter</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        {{ form_start(filterForm) }}
        {{ form_row(filterForm.search) }}
        <div class="mb-3" id="datePicker">
            <label>Date Range</label>
            <div class="input-group input-daterange">
                {{ form_widget(filterForm.fromDate) }}
                <span style=" background: #ddd; display: flex; justify-content: center; align-items: center; padding: 10px; ">to</span>
                {{ form_widget(filterForm.endDate) }}
            </div>
        </div>
        {% if allowOrderFilterPaymentOption %}
            {{ form_row(filterForm.status) }}
            {{ form_row(filterForm.paymentStatus) }}
            {{ form_row(filterForm.paymentMethod) }}
        {% endif %}
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="{{ app.request.pathInfo }}" class="btn btn-danger">Clear</a>
        </div>
        {{ form_end(filterForm) }}
    </div>
</div>
<script type="text/javascript">
    $('#datePicker .input-daterange').datepicker({});
</script>