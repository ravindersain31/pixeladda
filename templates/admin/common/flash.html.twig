{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert {{ class | default('') }} alert-{{ label }} {% if isFullScreen is defined and isFullScreen %} mb-0 p-2 text-center rounded-0 {% endif%} alert-dismissible fade show" role="alert" data-auto-dismiss="10000">
            {{ message | raw }}
            <button type="button" class="btn-close {% if isFullScreen is defined and isFullScreen %}px-3 pt-0{% endif %}" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}