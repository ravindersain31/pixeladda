{% extends 'admin/base.html.twig' %}

{% block title %}Manage Stripe Invoices{% endblock %}

{% block pageTitle %}
<div class="page-header-icon">
    <i class="fas fa-list"></i>
</div>
Manage Stripe Invoices
{% endblock %}

{% block body %}
<div class="card card-header-actions mx-auto shadow-none">
    <div class="card-header">
        Invoices List
        <a href="{{ url('admin_invoice_stripe_create') }}" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-2"></i>Add
        </a>
    </div>
    <div class="table-responsive">
        <table class="card-body table table-striped mb-0">
            <thead>
                <tr>
                    <th class="fit-to-cell">Invoice Id</th>
                    <th class="fit-to-cell">Invoice Number</th>
                    <th>Email</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th class="fit-to-cell">Refund Amount</th> 
                    <th class="fit-to-cell">Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for invoice in stripeInvoices ?? [] %}
                    <tr>
                        <td class="fit-to-cell">{{ invoice.id }}</td>
                        <td class="fit-to-cell">{{ invoice.invoice_number }}</td>
                        <td>{{ invoice.customer_email }}</td>
                        <td>${{ (invoice.amount_due / 100)|number_format(2) }}</td>
                        <td class="fit-to-cell">
                            {% if invoice.refund_amount > 0 %}
                                {% if invoice.refund_amount == invoice.amount_due %}
                                    <span class="badge bg-danger">Refunded Full</span>
                                {% else %}
                                    <span class="badge bg-warning text-white">Refunded Partial</span>
                                {% endif %}
                            {% else %}
                                {% if invoice.status == 'open' %}
                                    <span class="badge bg-gray-700 text-white">Open</span>
                                {% elseif invoice.status == 'paid' %}
                                    <span class="badge bg-success">Paid</span>
                                {% else %}
                                    <span class="badge bg-light text-dark">{{ invoice.status|capitalize }}</span>
                                {% endif %}
                            {% endif %}
                        </td>

                        <td class="fit-to-cell">
                            {% if invoice.refund_amount > 0 %}
                                ${{ (invoice.refund_amount / 100)|number_format(2) }}
                            {% else %}
                                â€”
                            {% endif %}
                        </td>
                        <td class="fit-to-cell">{{ invoice.created|date('M d, Y h:i A') }}</td>
                        {% if invoice.hosted_invoice_url %}
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-danger btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    Action
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="{{ invoice.hosted_invoice_url }}" target="_blank" class="dropdown-item">
                                            <i class="fas fa-eye me-1"></i>View Invoice
                                        </a>
                                        <a class="dropdown-item share-invoice-btn"
                                            data-gateway="stripe"
                                            data-invoice-url="{{ invoice.hosted_invoice_url }}"
                                            data-bs-toggle="modal"
                                            data-bs-target="#shareInvoiceModal">
                                            <i class="fas fa-share-nodes me-1"></i>Share Invoice Link
                                        </a>
                                        {% if invoice.status == 'paid' %}
                                            {% if invoice.refund_amount is not defined or invoice.refund_amount < invoice.amount_paid %}
                                                {% set fullAmount = invoice.amount_due / 100 %}
                                                {% set refundedAmount = (invoice.refund_amount ?? 0) / 100 %}
                                                {% set remainingAmount = fullAmount - refundedAmount %}

                                                <a class="dropdown-item refund-invoice-btn text-danger"
                                                    data-gateway="stripe"
                                                    data-invoice-id="{{ invoice.id }}"
                                                    data-invoice-number="{{ invoice.invoice_number }}"
                                                    data-full-amount="{{ fullAmount|number_format(2, '.', '') }}"
                                                    data-refunded-amount="{{ refundedAmount|number_format(2, '.', '') }}"
                                                    data-remaining-amount="{{ remainingAmount|number_format(2, '.', '') }}"
                                                    data-action="{{ path('admin_invoice_stripe_refund', { invoiceId: invoice.id }) }}"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#refundInvoiceModal">
                                                    <i class="fas fa-undo me-1"></i>Refund Invoice
                                                </a>
                                            {% endif %}
                                        {% endif %}
                                    </li>
                                </ul>
                            </div>
                        </td>
                        {% endif %}
                    </tr>
                {% else %}
                    <tr class="text-center">
                        <td colspan="6">No records</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<div class="mt-3">
    {{ knp_pagination_render(stripeInvoices) }}
</div>

{% component BootstrapModal with { id: 'shareInvoiceModal' } %}
    {% block modal_full_content %}
        <div class="modal-header">
            <h1 class="modal-title fs-5">Stripe invoice share link</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center">
            <p>Your invoice link is ready to be shared.</p>
            <div class="input-group mb-3">
                <input type="text" id="invoiceLinkInput" class="form-control" readonly>
                <button class="btn btn-outline-primary" id="copyInvoiceLinkBtn">Copy</button>
            </div>
        </div>
    {% endblock %}
{% endcomponent %}

<div class="modal fade" id="refundInvoiceModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5 text-dark" id="refundModalTitle">Refund Invoice</h1> 
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="refundModalBody">Loading...</div>
    </div>
  </div>
</div>

{% endblock %}