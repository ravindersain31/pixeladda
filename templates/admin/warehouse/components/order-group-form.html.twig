<div {{ attributes }}>
    {{ form_start(form, {
        attr: {
            'novalidate': true,
            'data-action': 'live#action:prevent',
            'data-live-action-param': 'save'
        }
    }) }}
    <div class="d-flex align-items-center">
        <div class="col-10">
            {{ form_row(form.group) }}
        </div>
        <div class="col-2 text-end mt-2 p-1">
            <button type="submit" data-loading="action(save)|addAttribute(disabled)" class="btn btn-primary btn-block btn-sm">
                <span data-loading="action(save)|show" style="display: none">Saving...</span>
                <span data-loading="action(save)|hide" style="display: block">Save</span>
            </button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
