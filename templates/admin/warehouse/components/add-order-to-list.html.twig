<div {{ attributes }} class="w-100 ms-2">
    {{ form_start(form, {
        attr: {
            'novalidate': true,
            'data-action': 'live#action:prevent',
            'data-live-action-param': 'save',
            'class': 'add-order-to-list'
        }
    }) }}
    {{ form_errors(form) }}
    <div class="d-flex">
        {{ form_widget(form.order) }}
        <div class="form-group ms-2 mb-sm-0 form-group-submit text-start align-content-around">
            <button type="submit" data-loading="action(save)|addAttribute(disabled)"
                    class="btn badge text-decoration-none text-white bg-primary no-processing">
                <span data-loading="action(save)|show" style="display: none">
                    <i class="fa-solid fa-circle-notch fa-spin"></i>
                </span>
                <span data-loading="action(save)|hide" style="display: block">
                    <i class="fa-solid fa-plus"></i>
                </span>
            </button>
        </div>
    </div>
    {{ form_end(form) }}
</div>