<div {{ attributes }} class="me-1">
    <label class="w-100">
        <span data-loading="action(save)|show" style="position: absolute;right: 15px; ">
            <i class="fa-solid fa-circle-notch fa-spin text-success"></i>
        </span>
        <textarea
                id="comments_{{ from }}_{{ warehouseOrder.id }}"
                class="form-control shadow-none p-1 border-0 {% if from is defined and from == 'maximize' %}fs-4 mt-2{% endif %}"
                name="comments"
                data-model="comments"
                placeholder="Add notes"
                data-live-action-param="debounce(300)|save"
                data-action="live#action"
                rows="{% if from is defined and from == 'maximize' %}6{% else %}1{% endif %}"
                data-gramm="false"
                data-gramm_editor="false"
                data-enable-grammarly="false"
        >{{ comments }}</textarea>
    </label>
</div>