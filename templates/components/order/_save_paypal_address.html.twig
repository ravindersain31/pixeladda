
<div {{ attributes }}>
    {{ form_start(form, {attr: {
        'novalidate': true,
        'data-action': 'live#action:prevent',
        'data-live-action-param': 'save'
    }}) }}
    {{ form_errors(form) }}
        <div class="text-center d-flex align-items-center justify-content-center mb-3">
            <div class="paypal-extra-info">
                <h2 class="mb-3 text-heading">Add Your Phone Number {% if form.state is defined %} and State{% endif %} to Receive Order Updates</h2>
                <div class="row">
                    {% if form.phone is defined %}
                        <div class="col-md-12 form-group mb-2">
                            <div class="col-xs-6 col-sm-12 col-md-4 col-lg-3">
                                {{ form_label(form.phone) }}
                            </div>
                            <div class="col-xs-6 col-sm-12 col-md-4 col-lg-3">
                                {{ form_widget(form.phone) }}
                                {{ form_help(form.phone) }}
                                {{ form_errors(form.phone) }}
                            </div>
                        </div>
                    {% endif %}
                    {% if form.state is defined %}
                        <div class="col-md-12 form-group mb-2">
                            <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3">
                                {{ form_label(form.state) }}
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3">
                                {{ form_widget(form.state) }}
                                {{ form_errors(form.state) }}
                            </div>
                        </div>
                    {% endif %}
                    <div class="col-12 mb-2">
                        <button type="submit" data-loading="action(save)|addAttribute(disabled)" class="btn btn-primary">
                            <span data-loading="action(save)|show" style="display: none">Updating...</span>
                            <span data-loading="action(save)|hide" style="display: block">Update</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
</div>
