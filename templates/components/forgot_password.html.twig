<div {{ attributes }}>
    {{ form_start(form, {attr: {
        'novalidate': true,
        'data-action': 'live#action:prevent',
        'data-live-action-param': 'forgotPassword',
    }}) }}
    {% if isSuccessful %}
        {% set error = flashError ? 'success' : 'danger' %}
        <div class="alert alert-{{error}}">{{ flashMessage }}</div>
    {% endif %}
    {{ form_errors(form) }}
        <div class="form-group">
            <label class="ysp-label-mrt" for="inputEmailAddress">Email</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-envelope" aria-hidden="true" data-acsb-hidden="true" data-acsb-force-hidden="true"></i>
                    </span>
                </div>
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>
        </div>
        <div class="form-group d-flex align-items-center justify-content-between mt-3">
            <button type="submit" data-loading="action(forgotPassword)|addAttribute(disabled)" class="btn btn-primary btn-block ysp-account-submit-btn">
                <span data-loading="action(forgotPassword)|show" style="display: none">Submiting...</span>
                <span data-loading="action(forgotPassword)|hide" style="display: block">Submit</span>
            </button>
        </div>
    {{ form_rest(form) }}
    {{ form_end(form, { render_rest: false }) }}
</div>