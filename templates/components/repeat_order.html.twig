<div {{ attributes }}>
    {{ form_start(form, {attr: {
        'novalidate': true,
        'data-action': 'live#action:prevent',
        'data-live-action-param': 'cloneCart',
    }}) }}
    {{ form_errors(form) }}
        <div class="row justify-content-center ysp-repeat-order-input-wrapper">
            <div class="col-lg-5 mt-2 mb-3">
                {% if isSuccessful %}
                    {{ include('components/_flash.html.twig',{
                        flashError:flashError,
                        flashMessage:flashMessage
                    })}}
                {% endif %}
                <div class="ysp-ft-form-wrapper row" id="top_footer_form">
                    {{ form_row(form.orderId, { 'type':'number' }) }}
                </div>
                <div class="form-group mb-sm-0 form-group-submit text-center">
                    <button type="submit" data-loading="action(cloneCart)|addAttribute(disabled)" class="repeat-btn submit-btn repeat-order-btn">
                        <span data-loading="action(cloneCart)|show" style="display: none">Submiting...</span>
                        <span data-loading="action(cloneCart)|hide" style="display: block">Submit</span>
                    </button>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
</div>