<div class="order-protection">
    <div class="order-protection-info">
        <div class="ysp-logo">
            <img width="90" height="56" src="{{ storeInfo.storeYardLogoOther }}" alt="Yard Sign Plus Logo"
                 class="img-fluid"/>
        </div>
        <div class="order-protection-heading">
            <div class="d-flex align-item-center">
                <h4>Order Protection</h4>
                <sup>
                    <span data-bs-toggle="modal" data-bs-target="#orderProtectionModel" class="ysp-info-icon">
                        <i class="fa fa-question"></i>
                    </span>
                </sup>
            </div>
            <p class="mb-0">
                Guaranteed delivery & satisfaction<span class="d-none d-md-inline"> with Order Protection</span>.
            </p>
        </div>
    </div>
    <div class="order-protection-action">
        <div class="order-protection-price">
            ${{ ((cart.subTotal + cart.totalShipping) * constant('App\\Entity\\Cart::ORDER_PROTECTION_PERCENTAGE') / 100) | number_format(2) }}
        </div>
        <div class="form-check form-switch">
            {# {% if from == 'checkout' %}
                <input type="checkbox" data-action="live#action:prevent" data-live-action-param="orderProtection(cartId={{ cart.cartId }})" id="orderProtectionCheckout" name="orderProtection" class="form-check-input" {% if cart.isOrderProtection %}checked{% endif %}>
            {% else %} #}
                <input type="checkbox" id="orderProtection" name="orderProtection" aria-label="Order Protection"
                       onchange="window.location = '{{ url('toggle_order_protection', {redirect: from, cartId: cart.cartId}) }}'"
                       class="form-check-input" {% if cart.isOrderProtection %}checked{% endif %}>
            {# {% endif %} #}
            <label class="form-check-label" for="orderProtection"></label>
        </div>
    </div>
</div>

