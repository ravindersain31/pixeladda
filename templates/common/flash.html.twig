{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert {{ class | default('') }} alert-{{ label }} text-center alert-dismissible fade show" role="alert" data-auto-dismiss="6000">
            {{ message | raw }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}