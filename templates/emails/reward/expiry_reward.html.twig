{% extends 'emails/base.html.twig' %}
{% block title %}Your YSP Rewards Expire Soon, Use Now!{% endblock %}
{% block body %}
<tr style="background: {{ primaryColor }}; color: white; font-size: 12px; font-style: italic; text-transform: uppercase;">
    <td colspan="3">
        <div>
            <h3 style="margin: 8px;">Your YSP Rewards Expire Soon, Use Now!</h3>
        </div>
    </td>
</tr>
<tr>
    <td colspan="3">
        <h3 style="color:{{ primaryColor }};margin: 10px 0;">APPLY YOUR FREE YSP REWARDS</h3>
        <p style="font-size: 16px;color: #000000;line-height: 135%;margin: 10px;">
