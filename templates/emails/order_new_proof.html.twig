{% extends 'emails/base.html.twig' %}
{% block title %}WE MADE YOUR PROOF{% endblock %}
{% block subject %}WE MADE YOUR PROOF{% endblock %}
{% block body %}
    <tr>
        <td colspan="3">
            <p style="font-size: 26px; font-weight: bold; color: #000000; padding: 0 50px; margin: 20px 0 10px;"
               class="user-name">Hi
                {{ order.billingAddress.firstName }} {{ order.billingAddress.lastName }}</p>
            <p class="off-desc ys-mob-ryt-lft-pad15"
               style="font-size: 20px; color: #000000; padding: 0 50px; line-height: 135%; margin: 15px 0 20px;">We have
                uploaded the proof for order #{{ order.orderId }}</p>
        </td>
    </tr>
    <tr>
        <td colspan="3">
            <a href="{{ storeBasedUrl(url('order_proof', {oid: order.orderId}), order.storeDomain) }}"
               style="background-color: #efc825;color: #000000;font-size: 30px;text-transform: uppercase;text-decoration: none;padding: 18px 30px;display: inline-block;font-weight: normal;border-radius: 10px;margin: 0 0 20px;line-height: 1.5;"
               target="_blank" class="ysp-common-btn-sm">CLICK TO APPROVE YOUR PROOF
                OR REQUEST CHANGES</a>
            <p style="font-size: 20px; font-weight: bold; color: #000000; padding: 0 50px; line-height: 135%; margin: 0 0 20px;"
               class="ys-mob-ryt-lft-pad15">YOUR ORDER
                WILL NOT BE PRODUCED UNTIL THIS PROOF IS APPROVED.</p>
        </td>
    </tr>
    <tr>
        <td colspan="3">
            {% include 'emails/common/_order_info_with_proof_table.html.twig' %}
        </td>
    </tr>
    {# <tr>
        <td colspan="3">
            {% include 'emails/common/_view_order_btn.html.twig' %}
        </td>
    </tr> #}
{% endblock %}



